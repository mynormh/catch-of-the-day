/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

// strating state for entering (runs immediately when component mounts)
.order-enter
  transform translateX(-120%)
  transition 0.5s
  max-height 0
  padding 0 !important
  // finish state for entering (transitions to this state after the time defined by the transition property )
  &.order-enter-active
    max-height 60px
    transform translateX(0)
    padding 2rem 0 !important

.order-exit
  transform translateX(0)
  transition 0.5s
  &.order-exit-active
    transform translateX(120%)
    padding 0

.count-enter
  transform translateY(100%)
  transition 0.5s
  &.count-enter-active
    transform translateY(0)

.count-exit
  transform translateY(0)
  transition 0.5s
  position absolute
  bottom 0
  left 0
  &.count-exit-active
    transform translateY(-100%) 